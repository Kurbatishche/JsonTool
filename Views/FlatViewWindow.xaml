<Window x:Class="JsonTool.Views.FlatViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Flat View" 
        Height="600" Width="900"
        MinHeight="400" MinWidth="600"
        WindowStartupLocation="CenterOwner"
        Background="#1E1E1E">
    
    <Window.Resources>
        <!-- Ð¡Ñ‚Ð¸Ð»Ñ– Ð´Ð»Ñ Ñ‚ÐµÐ¼Ð½Ð¾Ñ— Ñ‚ÐµÐ¼Ð¸ -->
        <Style x:Key="DarkButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3C3C3C"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#4A4A4A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#0E639C"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DarkTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#252526"/>
            <Setter Property="Foreground" Value="#D4D4D4"/>
            <Setter Property="BorderBrush" Value="#3C3C3C"/>
            <Setter Property="CaretBrush" Value="#AEAFAD"/>
            <Setter Property="SelectionBrush" Value="#264F78"/>
            <Setter Property="Padding" Value="4"/>
        </Style>

        <Style x:Key="DarkComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="#3C3C3C"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="Padding" Value="6,4"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0" Background="#2D2D2D" Padding="8">
            <WrapPanel>
                <!-- Separator -->
                <TextBlock Text="Separator:" Foreground="#CCCCCC" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <ComboBox x:Name="SeparatorComboBox" 
                          Style="{StaticResource DarkComboBoxStyle}"
                          Width="80"
                          SelectionChanged="SeparatorComboBox_SelectionChanged">
                    <ComboBoxItem Content="." IsSelected="True"/>
                    <ComboBoxItem Content="/"/>
                    <ComboBoxItem Content="-&gt;"/>
                    <ComboBoxItem Content="::"/>
                </ComboBox>

                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="12,0"/>

                <!-- Array Format -->
                <TextBlock Text="Array:" Foreground="#CCCCCC" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <ComboBox x:Name="ArrayFormatComboBox" 
                          Style="{StaticResource DarkComboBoxStyle}"
                          Width="80"
                          SelectionChanged="ArrayFormatComboBox_SelectionChanged">
                    <ComboBoxItem Content="[0]" IsSelected="True"/>
                    <ComboBoxItem Content=".0"/>
                    <ComboBoxItem Content=":0"/>
                </ComboBox>

                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="12,0"/>

                <!-- Options -->
                <CheckBox x:Name="ShowTypesCheckBox" 
                          Content="Show Types" 
                          Foreground="#CCCCCC" 
                          VerticalAlignment="Center"
                          Margin="0,0,12,0"
                          Checked="Options_Changed" Unchecked="Options_Changed"/>
                
                <CheckBox x:Name="ShowNullsCheckBox" 
                          Content="Show Nulls" 
                          Foreground="#CCCCCC" 
                          VerticalAlignment="Center"
                          IsChecked="True"
                          Margin="0,0,12,0"
                          Checked="Options_Changed" Unchecked="Options_Changed"/>

                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="12,0"/>

                <!-- Search -->
                <TextBlock Text="Filter:" Foreground="#CCCCCC" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <TextBox x:Name="FilterTextBox" 
                         Style="{StaticResource DarkTextBoxStyle}"
                         Width="150"
                         TextChanged="FilterTextBox_TextChanged"/>
            </WrapPanel>
        </Border>

        <!-- Main Content - Flat View Output -->
        <Border Grid.Row="1" Margin="8" BorderBrush="#3C3C3C" BorderThickness="1" CornerRadius="3">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Grid.Row="0" Background="#2D2D2D" Padding="8,4">
                    <TextBlock x:Name="HeaderText" 
                               Text="Flat View Output" 
                               Foreground="#CCCCCC" 
                               FontWeight="SemiBold"/>
                </Border>

                <!-- Output TextBox -->
                <TextBox x:Name="OutputTextBox"
                         Grid.Row="1"
                         Style="{StaticResource DarkTextBoxStyle}"
                         FontFamily="Cascadia Code, Consolas, Courier New"
                         FontSize="13"
                         IsReadOnly="True"
                         AcceptsReturn="True"
                         TextWrapping="NoWrap"
                         HorizontalScrollBarVisibility="Auto"
                         VerticalScrollBarVisibility="Auto"
                         BorderThickness="0"/>
            </Grid>
        </Border>

        <!-- Statistics Panel -->
        <Border Grid.Row="2" Background="#252526" Padding="8" Margin="8,0,8,8" CornerRadius="3">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Total: " Foreground="#808080"/>
                    <TextBlock x:Name="TotalEntriesText" Text="0" Foreground="#4EC9B0" FontWeight="Bold"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="Strings: " Foreground="#808080"/>
                    <TextBlock x:Name="StringCountText" Text="0" Foreground="#CE9178"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock Text="Numbers: " Foreground="#808080"/>
                    <TextBlock x:Name="NumberCountText" Text="0" Foreground="#B5CEA8"/>
                </StackPanel>

                <StackPanel Grid.Column="3" Orientation="Horizontal">
                    <TextBlock Text="Max Depth: " Foreground="#808080"/>
                    <TextBlock x:Name="MaxDepthText" Text="0" Foreground="#569CD6"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Buttons -->
        <Border Grid.Row="3" Background="#2D2D2D" Padding="8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button x:Name="CopyButton" 
                            Content="ðŸ“‹ Copy to Clipboard" 
                            Style="{StaticResource DarkButtonStyle}"
                            Click="CopyButton_Click"/>
                    <Button x:Name="SaveButton" 
                            Content="ðŸ’¾ Save to File" 
                            Style="{StaticResource DarkButtonStyle}"
                            Click="SaveButton_Click"/>
                    <Button x:Name="RefreshButton" 
                            Content="ðŸ”„ Refresh" 
                            Style="{StaticResource DarkButtonStyle}"
                            Click="RefreshButton_Click"/>
                </StackPanel>

                <Button Grid.Column="1" 
                        Content="Close" 
                        Style="{StaticResource DarkButtonStyle}"
                        Width="80"
                        Click="CloseButton_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>
